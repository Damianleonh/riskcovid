<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"></fragment>

    <LinearLayout
        android:layout_marginTop="600dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/ColorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/ColorPrimaryButtons"
            android:text="@string/registro"
            android:textColor="#000000"
            android:id="@+id/MainBtnRegister">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/ColorPrimaryButtons"
            android:text="Iniciar sesion"
            android:textColor="#000000"
            android:id="@+id/MainBtnLogin"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="@color/ColorPrimaryButtons"
            android:text="Calculadora"
            android:textColor="#000000"
            android:id="@+id/MainBtnCalculadora"></Button>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>